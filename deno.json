{
  "tasks": {
    "dev": "deno -A main.js",
    "dev:watch": "deno run --watch main.js --allow-all",
    "test": "deno test --allow-all",
    "test:watch": "deno test --watch --allow-all",
    "cvg": "deno test --coverage --allow-all",
    "cvg:detail": "deno coverage --detailed",
    "clean-db": "rm -r ./db/sqlite/todo.db"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.18",
    "@std/testing": "jsr:@std/testing@^1.0.17",
    "inquirer": "npm:inquirer@^13.2.2"
  }
}
